  "type": "module",
  "scripts": {
    "postinstall": "./scripts/npm-postinstall.sh",
    "test": "jest",
    "start": "vite",
    "build": "vite build",
    "clean": "rm -rf ./dist/ && mkdir ./dist/ && touch ./dist/.gitkeep",
    "typecheck": "tsc",
