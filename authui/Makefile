.PHONY: check-tidy
check-tidy:
	git status --porcelain | grep '.*'; test $$? -eq 1

.PHONY: fmt
fmt:
	npm run eslint:format
	npm run stylelint:format
	npm run prettier:format

.PHONY: lint
lint:
	npm run eslint
	npm run stylelint
	npm run prettier
	npm run typecheck

.PHONY: outdated
outdated:
	npm outdated caniuse-lite --json | jq -e '.["caniuse-lite"] == null'
	npm outdated stylelint-no-unsupported-browser-features --json | jq -e '.["stylelint-no-unsupported-browser-features"] == null'
