{
  "name": "authui",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "typecheck": "tsc -b",
    "format": "prettier --write --list-different ./src ./packages",
    "build": "parcel build --no-cache 'src/*.html' --dist-dir ../resources/authgear/static/generated",
    "test": "jest"
  },
  "alias": {
    "process": false,
    "buffer": false
  },
  "devDependencies": {
    "@jest/globals": "28.1.3",
    "@parcel/config-default": "2.6.2",
    "@types/luxon": "2.3.2",
    "@types/zxcvbn": "4.4.1",
    "jest": "28.1.3",
    "jest-environment-jsdom": "28.1.3",
    "parcel": "2.6.2",
    "postcss": "8.4.14",
    "prettier": "2.7.1",
    "tailwindcss": "3.1.6",
    "ts-jest": "28.0.7",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "@hotwired/stimulus": "3.0.1",
    "@hotwired/turbo": "7.1.0",
    "@tabler/icons": "1.72.0",
    "axios": "0.27.2",
    "cropperjs": "1.5.12",
    "intl-tel-input": "17.0.16",
    "luxon": "2.4.0",
    "zxcvbn": "4.4.2"
  }
}
