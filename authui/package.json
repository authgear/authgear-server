{
  "name": "authui",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "typecheck": "tsc -b",
    "format": "npm run prettier:format && npm run eslint:format && npm run stylelint:format",
    "prettier:format": "prettier --write --list-different ./src ./packages",
    "eslint:format": "eslint --fix './src/**/*.{js,ts}'",
    "stylelint:format": "stylelint --fix './src/**/*.{css,scss}'",
    "prettier": "prettier --write --list-different ./src ./packages",
    "eslint": "eslint './src/**/*.{js,ts}'",
    "stylelint": "stylelint './src/**/*.{css,scss}'",
    "build": "parcel build --no-cache 'src/*.html' --dist-dir ../resources/authgear/generated",
    "watch": "parcel watch 'src/*.html' --dist-dir ../resources/authgear/generated --no-hmr",
    "test": "jest"
  },
  "staticFiles": [
    {
      "staticPath": "node_modules/cldr-localenames-full/main",
      "staticOutPath": "cldr-localenames-full"
    }
  ],
  "alias": {
    "process": false,
    "buffer": false
  },
  "overrides": {
    "word-wrap": "@aashutoshrathi/word-wrap",
    "ethers": {
      "ws": "^7.5.10"
    }
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@oursky/eslint-plugin": "11.2.0",
    "@oursky/stylelint-oursky": "4.0.0",
    "@parcel/config-default": "2.10.2",
    "@parcel/resolver-glob": "2.10.2",
    "@types/luxon": "3.3.4",
    "@types/zxcvbn": "4.4.4",
    "eslint": "8.45.0",
    "eslint-plugin-compat": "4.2.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "parcel": "2.10.2",
    "parcel-reporter-static-files-copy": "1.5.3",
    "postcss": "8.4.31",
    "prettier": "3.1.0",
    "stylelint": "14.16.1",
    "tailwindcss": "3.3.5",
    "ts-jest": "29.1.1",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "@floating-ui/dom": "1.5.4",
    "@hotwired/stimulus": "3.2.2",
    "@hotwired/turbo": "7.3.0",
    "@metamask/detect-provider": "2.0.0",
    "@metamask/jazzicon": "github:MetaMask/jazzicon#d923914fda6a8795f74c2e66134f73cd72070667",
    "@sentry/browser": "7.80.0",
    "@sentry/tracing": "7.80.0",
    "@tabler/icons": "1.107.0",
    "axios": "1.6.1",
    "cldr-localenames-full": "44.1.0",
    "cropperjs": "1.6.1",
    "ethers": "5.5.1",
    "intl-tel-input": "18.5.3",
    "libphonenumber-js": "1.10.53",
    "luxon": "3.4.4",
    "siwe": "1.1.6",
    "zxcvbn": "4.4.2"
  }
}
