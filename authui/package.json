{
  "name": "authui",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "typecheck": "tsc -b",
    "format": "prettier --write --list-different ./src ./packages",
    "build": "parcel build --no-cache 'src/*.html' --dist-dir ../resources/authgear/generated",
    "test": "jest"
  },
  "alias": {
    "process": false,
    "buffer": false
  },
  "devDependencies": {
    "@jest/globals": "28.1.3",
    "@parcel/config-default": "2.7.0",
    "@types/luxon": "3.0.1",
    "@types/zxcvbn": "4.4.1",
    "jest": "28.1.3",
    "jest-environment-jsdom": "28.1.3",
    "parcel": "2.7.0",
    "postcss": "8.4.16",
    "prettier": "2.7.1",
    "tailwindcss": "3.1.8",
    "ts-jest": "28.0.8",
    "typescript": "4.8.2"
  },
  "dependencies": {
    "@hotwired/stimulus": "3.1.0",
    "@hotwired/turbo": "7.1.0",
    "@metamask/detect-provider": "1.2.0",
    "@metamask/jazzicon": "github:MetaMask/jazzicon#d923914fda6a8795f74c2e66134f73cd72070667",
    "@tabler/icons": "1.92.0",
    "axios": "0.27.2",
    "cropperjs": "1.5.12",
    "ethers": "5.5.1",
    "intl-tel-input": "17.0.18",
    "luxon": "3.0.3",
    "siwe": "1.1.6",
    "zxcvbn": "4.4.2"
  }
}
