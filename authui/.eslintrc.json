{
  "plugins": [
    "@oursky",
    "compat"
  ],
  "parserOptions": {
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "extends": [
    "plugin:@oursky/eslint",
    "plugin:@oursky/oursky",
    "plugin:@oursky/typescript",
    "plugin:compat/recommended"
  ],
  "env": {
    "browser": true
  },
  "globals": {
    "Set": "readonly",
    "Map": "readonly",
    "Turnstile": "readonly",
    "ReCaptchaV2": "readonly"
  },
  "overrides": [
    {
      "files": [
        "**/*.{ts,tsx,js,jsx}"
      ]
    }
  ],
  "rules": {
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "no-void": "off",
    "@typescript-eslint/explicit-module-boundary-types": "off",
    "class-methods-use-this": "off"
  }
}